<h3>Edit: <%= @restaurant.name %></h3>

<form class="creation-form" action="/restaurants/<%= @restaurant.id %>" method="post">
	<input type="hidden" name="_method" value="put">
	<label>Name: <input type="text" name="restaurant[name]" value="<%= @restaurant.name %>"></label>
	<label>Cuisine: <input type="text" name="restaurant[cuisine]" value="<%= @restaurant.cuisine %>"></label>
	<label>Address: <input type="text" name="restaurant[address]" value="<%= @restaurant.address %>"></label>
	<label>City: <input type="text" name="restaurant[city]" value="<%= @restaurant.city %>"></label>
	<label>State: <input type="text" name="restaurant[state]"value="<%= @restaurant.state %>"></label>
	<label>Zip: <input type="text" name="restaurant[zip]" value="<%= @restaurant.zip %>"></label>
	<input type="submit" name="submit" value="Update Restaurant">
</form>